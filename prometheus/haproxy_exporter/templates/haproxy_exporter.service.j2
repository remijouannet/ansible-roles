[Unit]
Description= haproxy_exporter
Wants=basic.target
After=basic.target network.target

[Service]
User=prometheus
Group=prometheus
Type=simple
{% if haproxy_exporter_opts is defined %}
ExecStart=/opt/haproxy_exporter/haproxy_exporter-0.9.0.linux/haproxy_exporter {{ haproxy_exporter.opts }}
{% else %}
ExecStart=/opt/haproxy_exporter/haproxy_exporter-0.9.0.linux/haproxy_exporter
{% endif %}

[Install]
WantedBy=multi-user.target
