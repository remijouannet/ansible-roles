[Unit]
Description= node_exporter
Wants=basic.target
After=basic.target network.target

[Service]
User=prometheus
Group=prometheus
Type=simple
{% if node_exporter_opts is defined %}
ExecStart=/opt/node_exporter/node_exporter-0.15.1.linux-amd64/node_exporter {{ node_exporter_opts }}
{% else %}
ExecStart=/opt/node_exporter/node_exporter-0.15.1.linux-amd64/node_exporter
{% endif %}

[Install]
WantedBy=multi-user.target
