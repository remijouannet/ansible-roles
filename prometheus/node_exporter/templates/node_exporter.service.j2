[Unit]
Description= node_exporter
Wants=basic.target
After=basic.target network.target

[Service]
User=prometheus
Group=prometheus
Type=simple
{% if node_exporter.opts is defined %}
ExecStart=/opt/node_exporter/node_exporter-0.18.1.linux/node_exporter {{ node_exporter.opts }}
{% else %}
ExecStart=/opt/node_exporter/node_exporter-0.18.1.linux/node_exporter
{% endif %}

[Install]
WantedBy=multi-user.target
