[Unit]
Description= graphite_exporter
Wants=basic.target
After=basic.target network.target

[Service]
User=prometheus
Group=prometheus
Type=simple
ExecStart=/opt/graphite_exporter/graphite_exporter-{{ graphite_exporter.version }}.linux-amd64/graphite_exporter \
    --graphite.listen-address=:2003 \
    --graphite.mapping-config=/opt/graphite_exporter/config.yml

[Install]
WantedBy=multi-user.target
